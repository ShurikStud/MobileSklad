<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.omegaauto.shurik.mobilesklad">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sklad"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sklad"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_login_desc"></activity>
        <activity
            android:name=".ScanActivity"
            android:label="@string/activity_scan_desc"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation"/>
        <activity
            android:name=".ContainerActivity"
            android:label="@string/container"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsContainerFragment"
            android:label="@string/activity_settings_desc" />
        <activity
            android:name=".SettingsPagersActivity"
            android:label="@string/activity_settings_desc" />
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cameraScanBarCode.AnyOrientationCaptureActivity"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>

</manifest>