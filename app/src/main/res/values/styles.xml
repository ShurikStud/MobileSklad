<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/colorBackgroundLayout</item>
        <item name="colorPrimaryDark">@color/colorBackgroundLayout</item>
        <item name="android:shadowColor">@color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/colorBackgroundSeparatorCenter</item>
        <item name="colorPrimaryDark">@color/colorBackgroundSeparatorCenter</item>
        <item name="android:shadowColor">@color/transparent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:shadowColor">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:background">@drawable/shape_row_invisible</item>
    </style>

    <style name="TextStyleContainerAdditional">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorTextDisable</item>
    </style>

    <style name="TextStyleContainerName">
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorTextDisable</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextStyleContainerValue">
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorTextDisable</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextStylePropertyNameVisible">
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorTextDisable</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextStyleContainerDescr">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyleLarge" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">35dp</item>
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@color/colorTextEnable</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="zxing_CaptureTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
    </style>

    <style name="Transparent">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
